#undef COMBO_HOOK
#define COMBO_HOOK global-quick-tap-ms = <100>;

#define COMBO_TERM_FAST 20
#define COMBO_TERM_SLOW 35

// make homerow combos tap-only (so HRMs can be chorded instantaneously)
#define HRC_TAB    &hml         LA(LGUI) TAB

// Syntax: ZMK_COMBO(name, bindings, keypos, layers, timeout)

/* Horizontal combos - left hand */
ZMK_COMBO(esc,   &kp ESC,       LT4 LT3,     BASE NAV NUM, COMBO_TERM_FAST)

ZMK_COMBO(tab,   HRC_TAB,       LM4 LM3,     BASE NAV NUM, COMBO_TERM_FAST)

ZMK_COMBO(cut,   &kp LC(X),     LB3 LB1,     BASE NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(copy,  &kp LC(INS),   LB3 LB2,     BASE NAV NUM, COMBO_TERM_FAST)
ZMK_COMBO(paste, &kp LS(INS),   LB2 LB1,     BASE NAV NUM, COMBO_TERM_FAST)